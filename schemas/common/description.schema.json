{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/daggerheart-data/daggerheart-data/refs/heads/main/schemas/common/description.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "paragraph": { "$ref": "./localized-string.schema.json" },
      "list": {
        "type": "array",
        "items": { "$ref": "./localized-string.schema.json" },
        "minItems": 1
      }
    },
    "oneOf": [{ "required": ["paragraph"] }, { "required": ["list"] }],
    "not": { "required": ["paragraph", "list"] },
    "additionalProperties": false
  },
  "minItems": 1
}
